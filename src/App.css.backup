@import "tailwindcss";

#root {
  width: 100%;
  max-width: 100vw;  /* ✅ Allow full width on mobile */
  margin: 0 auto;
  padding: 1rem;  /* ✅ Less padding on mobile */
  text-align: center;
  overflow-x: hidden;  /* ✅ Prevent horizontal scroll */
}

/* Desktop: restore max-width */
@media (min-width: 1024px) {
  #root {
    max-width: 1280px;
    padding: 2rem;
  }
}

.logo {
  height: 6em;
  padding: 1.5em;
  will-change: filter;
  transition: filter 300ms;
}
.logo:hover {
  filter: drop-shadow(0 0 2em #646cffaa);
}
.logo.react:hover {
  filter: drop-shadow(0 0 2em #61dafbaa);
}

@keyframes logo-spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

@media (prefers-reduced-motion: no-preference) {
  a:nth-of-type(2) .logo {
    animation: logo-spin infinite 20s linear;
  }
}

.card {
  padding: 2em;
}

.read-the-docs {
  color: #888;
}
/* src/index.css */

@tailwind base;
@tailwind components;
@tailwind utilities;

@layer components {
        .lang-dropdown {
                @apply rounded-lg shadow-xl py-1 max-h-[90vh] overflow-auto border;
        }

        /* Variant A: Neutral / subtle */
        .lang-dropdown.variant-a {
                @apply bg-gradient-to-b from-white to-slate-50 dark:from-slate-800 dark:to-slate-700 border-slate-200 dark:border-slate-600;
        }

        /* Variant B: Light = bg-blue-200 with black 1px border; Dark = bg-blue-700 with black 1px border */
        .lang-dropdown.variant-b {
                @apply bg-blue-200 border-black text-black;
                @apply dark:bg-blue-700 dark:border-black dark:text-white;
        }

        .lang-item {
                @apply w-full text-left px-4 py-2 flex items-center gap-2 whitespace-nowrap;

                /* Give each item a subtle panel background so rows aren't transparent */
                @apply bg-blue-100 dark:bg-blue-800;
                @apply hover:bg-blue-200 dark:hover:bg-blue-700;
                @apply border-b border-black/10 dark:border-white/10;
        }

        .lang-item.selected-light {
                @apply bg-blue-600 text-white;
        }

        .lang-item.selected-dark {
                @apply bg-yellow-500 text-black;
        }
}
* {
  box-sizing: border-box;
}

html, body, #root {
  width: 100%;
  min-height: 100vh;
  margin: 0;
  padding: 0;
  overflow-x: hidden;
}

/* Prevent images and media from overflowing */
img, video, canvas, svg {
  max-width: 100%;
  height: auto;
}


